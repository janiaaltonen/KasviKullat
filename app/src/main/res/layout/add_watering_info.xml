<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/action_bar"
        android:id="@+id/addWateringInfo_appBar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Mikä päivä minut kastellaan seuraavaksi?" />

    <Button
        android:id="@+id/addWateringInfo_datePickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Valitse päivä" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Kuinka usein tarvitsen kastelua?" />

    <Button
        android:id="@+id/addWateringInfo_numberPickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valitse"/>


    <Button
        android:id="@+id/button_add_watering_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Tallenna" />

</LinearLayout>