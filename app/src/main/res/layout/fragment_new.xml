<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_pickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Valitse kasvi listasta"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner_flowerNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/textview_pickName"/>

    <Button
        android:id="@+id/button_saveFlowerChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_flowerNames"
        android:text="Tallenna" />



</RelativeLayout>